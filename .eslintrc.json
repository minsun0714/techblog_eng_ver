{
	"root": true,
	"extends": [
		"next/core-web-vitals",
		"next",
		"prettier",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"env": {
		"node": true,
		"browser": true
	},
	"rules": {
		"@typescript-eslint/no-explicit-any": "warn",
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				],
				"alphabetize": {
					"order": "asc",
					"caseInsensitive": true
				},
				"newlines-between": "never"
			}

		]
	}
}
